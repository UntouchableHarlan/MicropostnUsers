<h1>Welcome</h1>
<% if current_user %>
<div class="container">
  Welcome <%= current_user.first_name %> | <%= link_to 'Logout', logout_path%>
</div>

<div class="container">
  <%= form_for(@micropost) do |f| %>
  <div class="field">
    <%= f.text_area :content, placeholder: "New post..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
</div>

<div class="container">
  <ul style="list-style: none">
  <% @microposts.each do |m| %>
    <li>
      <%= m.user.first_name %>: <%= m.content %>
    </li>
  <% end %>
</ul>
</div>

<% else %>

<div class="container">
    <%= link_to 'Sign Up', signup_path %> | <%= link_to 'Login', login_path %>
</div>

<div class="container">
  <h1>Look at all the folks posting</h1>
  <br />
  <div class="container">
    <ul style="list-style: none">
    <% @microposts.each do |m| %>
    <li>
      <%= m.user.first_name %>: <%= m.content %>
    </li>
    <% end %>
  </ul>
  </div>
</div>

<% end %>
